@{
    ViewData["Title"] = "Login";
}

<!-- Kendo UI Stylesheet -->
<link rel="stylesheet" href="https://kendo.cdn.telerik.com/2022.1.119/styles/kendo.default-v2.min.css">

<style>
    /* Custom CSS for login form */
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
        display: block;
    }

    .k-textbox {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 3px;
    }

    .k-button {
        display: block;
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 3px;
        cursor: pointer;
    }

    .k-button:hover {
        background-color: #0056b3;
    }
</style>

@* <form id="loginForm" asp-controller="KendoUserComponentApi" asp-action="Login" method="post" class="container k-form"> *@
    <div class="form-group">
        <label for="c_emailid">Email:</label>
        <input class="k-textbox" type="text" id="c_emailid" name="c_emailid" />
    </div>
    <div class="form-group">
        <label for="c_password">Password:</label>
        <input class="k-textbox" type="password" id="c_password" name="c_password" />
    </div>
    <button type="submit" onclick="Login()" class="k-button">Sign in</button>
           
            </div>
@* </form> *@

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<!-- Kendo UI Scripts -->
<script src="https://kendo.cdn.telerik.com/2022.1.119/js/kendo.all.min.js"></script>


<script>
    function Login() {
    var user = {
        c_emailid: $('#c_emailid').val(),
        c_password: $('#c_password').val(),
        c_username: "", // Provide a default value or leave it empty if not applicable
        c_userrole: "" // Provide a default value or leave it empty if not applicable
    };

    var settings = {
        "url": "https://localhost:7123/api/KendoUserComponentApi/Login",
        "method": "POST",
        "timeout": 0,
        "headers": {
            "Content-Type": "application/json"
        },
        "data": JSON.stringify(user)
    };

    $.ajax(settings)
        .done(function (response) {
            alert('Successfully Logged In!');
            localStorage.setItem('token', response);
            window.location = "/KendoUserComponentApi/Login";
        })
        .fail(function (response) {
            alert(response.responseText);
        });
}


</script>


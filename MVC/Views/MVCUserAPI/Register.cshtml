@model tbluser

@{
    ViewBag.Title = "Register";
    @* Layout = "~/Views/Shared/_Layout.cshtml"; *@
}


<h2>Register</h2>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js" integrity="sha512-STof4xm1wgkfm7heWqFJVn58Hm3EtS31XFaagaa8VMReCXAkQnJZ+jEy8PCC/iT18dFy95WcExNHFTqLyp72eQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
   
    <div class="form-horizontal">


        <div class="form-group">
            <p>Username</p>
            <div class="col-md-10">
                <input type="text" class="form-control" id="c_username">
            </div>
        </div>


        <div class="form-group">
            <p>Email</p>
            <div class="col-md-10">
                <input type="text" class="form-control" id="c_emailid">
            </div>
        </div>


        <div class="form-group">
            <p>Password</p>
            <div class="col-md-10">
                <input type="password" class="form-control" id="c_password">
            </div>
        </div>

        @* <div class="form-group">
            <p> User Role</p>
            <div class="col-md-10">
                <input type="text" class="form-control" id="c_userrole">
            </div>
        </div> *@


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Register" class="btn btn-primary" id="btnRegister" onclick="Register()" />
            </div>
        </div>
    </div>




<script>
    function Register() {
        var user = {
            c_username: $("#c_username").val(),
            c_emailid: $("#c_emailid").val(),
            c_password: $("#c_password").val(),
            @* c_userrole: $("#c_userrole").val() *@
        }
        var settings = {
            "url": "https://localhost:7123/api/UserApi/Register",
            "method": "POST",
            "timeout": 0,
            "headers": {
                "Content-Type": "application/json"
            },
            "data": JSON.stringify(user)
        }
        console.log(user);
        $.ajax(settings).done(function (response) {
            console.log(response);
            alert("Successfully Registered!");
            window.location = "/MVCUserAPI/Login";
        }).fail(function (response) {
            alert(response.responseText);
            window.location = "/MVCUserAPI/Register"; 
        });
    }
</script>

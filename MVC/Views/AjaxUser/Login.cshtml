@model MVC.Models.tbluser;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Login Form</title>
</head>
<body>
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>Login</h4>
                </div>
                <div class="card-body">
                        <div class="mb-3">
                            <label for="c_emailid" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="c_emailid"  required>
                        </div>

                        <div class="mb-3">
                            <label for="c_password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="c_password" required>
                        </div>
                        <button class="btn btn-primary" id="loginBtn" >Submit</button>
                        <div class="card-footer text-muted text-center">
                            Don't have an account? <a href='/Register/Register' class="text-primary">Sign Up</a>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"
    integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
</body>
</html>
@section Scripts
{
    <script>
        debugger;
        $('#loginBtn').on('click', function () {
                var user = {
                    c_emailid : $('#email').val(),
                    c_password: $('#password').val()
                };
                console.log(user);
                debugger;
                $.ajax({
                    url: '/AjaxUser/Login',
                    type: 'POST',
                    contentType: 'application/json; charset=utf-8',
                    data: JSON.stringify(user),
                    success: function (result) {
                        console.log(result);
                        debugger;
                        if (result.success) {
                            window.location.href = result.redirectUrl;
                        } else {
                            alert(result.message);
                        }
                    },
                    error: function (error) {
                        console.log(error);
                    }
                });
            });
    </script>
}
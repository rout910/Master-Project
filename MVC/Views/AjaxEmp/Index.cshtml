@model IEnumerable<MVC.Models.tblemp>

<!DOCTYPE html>
<html>
<head>
    <title>Employee List</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script> <!-- SweetAlert CDN -->
</head>
<body>
    <div class="container">
        <h2 class="mt-5 mb-4">Employee List</h2>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Gender</th>
                        <th>DOB</th>
                        <th>Shift</th>
                        <th>Department ID</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var emp in Model)
                    {
                        <tr>
                            <td>@emp.c_empid</td>
                            <td>@emp.c_empname</td>
                            <td>@emp.c_gender</td>
                            <td>@emp.c_dob.ToString("yyyy-MM-dd")</td>
                            <td>@emp.c_shift</td>
                            <td>@emp.c_depid</td>
                            <td><img id="imagePreview" name="imagePreview" src="/images/@emp.c_empimage" alt="Employee Image" width="100" /></td>

                            <td>
                                <button class="btn btn-primary btn-sm" onclick="getDetails('@emp.c_empid')">Edit</button>
                                <button class="btn btn-danger btn-sm" onclick="deleteEmployee('@emp.c_empid')">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <button class="btn btn-success mt-3 mb-5" onclick="showAddForm()">Add Employee</button>

        <div id="addForm" style="display:none;">
            <h2 class="mt-4">Add Employee</h2>
            <form id="insertForm" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="text" class="form-control" id="name" name="c_empname" placeholder="Name">
                </div>
                <div class="form-group">
                    Gender:
                    <input type="radio" id="male" name="c_gender" value="Male">
                    <label for="male">Male</label>
                    <input type="radio" id="female" name="c_gender" value="Female">
                    <label for="female">Female</label>
                </div>
                <div class="form-group">
                    DOB: <input type="date" class="form-control" id="dob" name="c_dob">
                </div>
                <div class="form-group">
                    Shift:
                    <input type="checkbox" id="morning" name="c_shift" value="Morning">
                    <label for="morning">Morning</label>
                    <input type="checkbox" id="night" name="c_shift" value="Night">
                    <label for="night">Night</label>
                </div>
                <div class="form-group">
                    Department:
                    <select class="form-control" id="department" name="c_depid">
                        <option value="">Select Department</option>
                    </select>
                </div>
                <div class="form-group">
                    Image: <input type="file" class="form-control-file" id="c_empimage" name="c_empimage" accept="image/*">
                </div>
                <div class="form-group">
                    <button type="button" class="btn btn-primary" onclick="insertEmployee()">Add Employee</button>
                </div>
            </form>
        </div>

        <div id="updateForm" style="display:none;">
            <h2 class="mt-4">Update Employee</h2>
            <form id="editForm" method="post" enctype="multipart/form-data">
                <input type="hidden" id="editId" name="c_empid">
                <div class="form-group">
                    <input type="text" class="form-control" id="editName" name="c_empname" placeholder="Name">
                </div>
                <div class="form-group">
                    Gender:
                    <input type="radio" id="editMale" name="c_gender" value="Male">
                    <label for="editMale">Male</label>
                    <input type="radio" id="editFemale" name="c_gender" value="Female">
                    <label for="editFemale">Female</label>
                </div>
                <div class="form-group">
                    DOB: <input type="date" class="form-control" id="editDob" name="c_dob">
                </div>
                <div class="form-group">
                    Shift:
                    <input type="checkbox" id="editMorning" name="c_shift" value="Morning">
                    <label for="editMorning">Morning</label>
                    <input type="checkbox" id="editNight" name="c_shift" value="Night">
                    <label for="editNight">Night</label>
                </div>
                <div class="form-group">
                    Department:
                    <select class="form-control" id="editDepartment" name="c_depid">
                        <option value="">Select Department</option>
                    </select>
                </div>
                <div class="form-group">
                    Image: <input type="file" class="form-control-file" id="editEmpImage" name="c_empimage" accept="image/*">
                </div>
                <div class="form-group">
                    <button type="button" class="btn btn-primary" onclick="updateEmployee()">Update Employee</button>
                </div>
            </form>
        </div>
   </div>


<script>
    // Function to populate department dropdown
    $(document).ready(function(){
        $.ajax({
            url: '/AjaxEmp/GetAllDept',
            type: 'GET',
            success: function (departments) {
                departments.forEach(function(department) {
                    $('#department').append('<option value="' + department.c_depid + '">' + department.c_dename + '</option>');
                    $('#editDepartment').append('<option value="' + department.c_depid + '">' + department.c_dename + '</option>');
                });
            }
        });
    });

    function showAddForm() {
        $('#addForm').show();
        $('#updateForm').hide();
    }

    function showUpdateForm() {
        $('#updateForm').show();
        $('#addForm').hide();
    }

    function insertEmployee() {
        var shift = [];
        $("input[name='c_shift']:checked").each(function(){
            shift.push($(this).val());
        });

        var data = new FormData($('#insertForm')[0]);

        $.ajax({
            url: '/AjaxEmp/Insert',
            type: 'POST',
            processData: false,
            contentType: false,
            data: data,
            success: function (response) {
                Swal.fire({
                    title: 'Success!',
                    text: 'Employee inserted successfully!',
                    icon: 'success',
                    confirmButtonText: 'OK'
                }).then(() => {
                    location.reload();
                });
            },
            error: function(xhr, status, error) {
                Swal.fire({
                    title: 'Error!',
                    text: xhr.responseText || error,
                    icon: 'error',
                    confirmButtonText: 'OK'
                });
            }
        });
    }

    function updateEmployee() {
        var shift = [];
        $("input[name='c_shift']:checked").each(function(){
            shift.push($(this).val());
        });

        var gender = $("input[name='c_gender']:checked").val();
        var dob = $('#editDob').val();

        var data = new FormData($('#editForm')[0]);
        data.append("c_gender", gender);
        data.append("c_dob", dob);

        var empId = $('#editId').val();

        $.ajax({
            url: '/AjaxEmp/Update/' + empId,
            type: 'PUT',
            processData: false,
            contentType: false,
            data: data,
            success: function (response) {
                Swal.fire({
                    title: 'Success!',
                    text: 'Employee details updated successfully!',
                    icon: 'success',
                    confirmButtonText: 'OK'
                }).then(() => {
                    location.reload();
                });
            },
            error: function(xhr, status, error) {
                Swal.fire({
                    title: 'Error!',
                    text: xhr.responseText || error,
                    icon: 'error',
                    confirmButtonText: 'OK'
                });
            }
        });
    }

    function getDetails(id) {
        $.ajax({
            url: '/AjaxEmp/GetDetails?id=' + id,
            type: 'GET',
            success: function (employee) {
                // Populate Update Employee form with employee details
                $('#editId').val(employee.c_empid);
                $('#editName').val(employee.c_empname);
                // Set gender
                if (employee.c_gender === 'Male') {
                    $('#editMale').prop('checked', true);
                } else {
                    $('#editFemale').prop('checked', true);
                }
                $('#editDob').val(employee.c_dob.split('T')[0]);

                // Set shift
                if (employee.c_shift.includes('Morning')) {
                    $('#editMorning').prop('checked', true);
                }
                if (employee.c_shift.includes('Night')) {
                    $('#editNight').prop('checked', true);
                }
                $('#editDepartment').val(employee.c_depid);
                
                if (employee.c_empimage) {
                    // Set the image preview
                    $('#editEmpImage').attr('src', '/images/' + employee.c_empimage);
                }
                
                showUpdateForm();
            },
            error: function (xhr, status, error) {
                Swal.fire({
                    title: 'Error!',
                    text: 'Error fetching employee details: ' + xhr.responseText,
                    icon: 'error',
                    confirmButtonText: 'OK'
                });
            }
        });
    }

    function deleteEmployee(id) {
        $.ajax({
            url: '/AjaxEmp/DeleteConfirmed?id=' + id,
            type: 'POST',
            success: function (response) {
                Swal.fire({
                    title: 'Success!',
                    text: response.message,
                    icon: 'success',
                    confirmButtonText: 'OK'
                }).then(() => {
                    location.reload();
                });
            },
            error: function(xhr, status, error) {
                Swal.fire({
                    title: 'Error!',
                    text: xhr.responseText || error,
                    icon: 'error',
                    confirmButtonText: 'OK'
                });
            }
        });
    }
</script>
</body>
</html>

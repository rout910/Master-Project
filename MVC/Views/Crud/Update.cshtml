@model MVC.Models.tblemp
@{
    ViewBag.Title = "Update";
}

<div class="container mt-5">
    <h2 class="mb-4">Update Employee Information</h2>
    <form action="Update" method="post" class="row g-3">
        <input type="hidden" name="Id" value="@Model.c_empid"/>

        <div class="col-md-6">
            <!-- Employee Name -->
            <div class="mb-3">
                <label for="Name" class="form-label">Employee Name:</label>
                <input asp-for="c_empname" class="form-control" />
            </div>

            <!-- Employee DOB -->
            <div class="mb-3">
                <label for="Dob" class="form-label">Employee DOB:</label>
                <input asp-for="c_dob" type="text" class="form-control" id="datepicker" autocomplete="off" />
            </div>

            <!-- Employee Gender -->
            <div class="mb-3">
                <label class="form-label">Employee Gender:</label>
                <div class="form-check">
                    <input asp-for="c_gender" type="radio" value="Male" class="form-check-input" />
                    <label class="form-check-label">Male</label>
                </div>
                <div class="form-check">
                    <input asp-for="c_gender" type="radio" value="Female" class="form-check-input" />
                    <label class="form-check-label">Female</label>
                </div>
            </div>

            <!-- Checkboxes for Shift -->
            <div class="mb-3">
                <label class="form-label">Shift:</label>
                <div class="form-check">
                    <input type="checkbox" id="morning" name="c_shift" value="Morning" class="form-check-input" />
                    <label for="morning" class="form-check-label">Morning</label>
                </div>
                <div class="form-check">
                    <input type="checkbox" id="afternoon" name="c_shift" value="Afternoon" class="form-check-input" />
                    <label for="afternoon" class="form-check-label">Afternoon</label>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <!-- Image -->
            <div class="mb-3">
                <label for="image" class="form-label">Image</label>
                <input type="file" class="form-control" id="c_empimage" name="c_empimage" accept="image/*" required>
            </div>

            <!-- Submit Button -->
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Update Data</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" rel="stylesheet"/>
    <script>
        $(document).ready(function () {
            $('#datepicker').datepicker({
                format: 'yyyy-mm-dd',
                autoclose: true
            });
        });
    </script>
}

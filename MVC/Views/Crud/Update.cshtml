@model MVC.Models.tblemp
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Employee Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" rel="stylesheet">
</head>

<body>
    <div class="container mt-5">
        <h1 class="mb-4">Update Employee Details</h1>

        <form action="/Crud/Update" method="post" class="row g-3" enctype="multipart/form-data">

            <!-- Left Column -->
            <div class="col-md-6">
                <!-- Employee ID -->
                <input type="hidden" name="c_empid" value="@Model.c_empid" />

                <!-- Name -->
                <div class="mb-3">
                    <label for="employeename" class="form-label">Name</label>
                    <input type="text" class="form-control" id="c_empname" name="c_empname" value="@Model.c_empname" required>
                </div>

                <!-- Gender -->
                <div class="mb-3">
                    <label class="form-label">Gender</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="c_gender" id="male" value="Male" @(Model.c_gender == "Male" ? "checked" : "")>
                        <label class="form-check-label" for="male">Male</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="c_gender" id="female" value="Female" @(Model.c_gender == "Female" ? "checked" : "")>
                        <label class="form-check-label" for="female">Female</label>
                    </div>
                </div>
            </div>

            <!-- Right Column -->
            <div class="col-md-6">
                <!-- Date of Birth -->
                <div class="mb-3">
                    <label for="dbo" class="form-label">Date of Birth</label>
                    <input type="date" class="form-control" id="c_dob" name="c_dob" value="@Model.c_dob.ToString("yyyy-MM-dd")" required>
                </div>

                <!-- Shift -->
                <div class="mb-3">
                    <label class="form-label">Shift:</label>
                    <div class="form-check">
                        <input type="checkbox" id="morning" name="c_shift" value="Morning" class="form-check-input" @(Model.c_shift.Contains("Morning") ? "checked" : "")>
                        <label for="morning" class="form-check-label">Morning</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" id="afternoon" name="c_shift" value="Afternoon" class="form-check-input" @(Model.c_shift.Contains("Afternoon") ? "checked" : "")>
                        <label for="afternoon" class="form-check-label">Afternoon</label>
                    </div>
                </div>

                <!-- Image -->
              <div class="mb-3">
    <label for="currentImage" class="form-label">Current Image</label>
    <img src="@Model.c_empimage" class="img-thumbnail rounded" alt="Employee Image" style="max-width: 150px; max-height: 150px;">
     <input type="file" id="photo" class="form-control" for="photo" name="photo" />
</div>

                <!-- Department ID Dropdown -->
                 <div class="form-group">
                    <label for="Department">Department:</label>
                    @Html.DropDownListFor(model => model.c_depid, ViewBag.Courses as SelectList, "-- Select Department --", new { @class = "form-control" })
                </div>
                <div class="col-12 mb-3">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </div>
        </form>
    </div>

    <!-- Add Bootstrap JS and Popper.js scripts (required for some Bootstrap features) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
</body>

</html>

@{
    ViewData["Title"] = "Login";
}

<!-- Kendo UI Stylesheet -->
<link rel="stylesheet" href="https://kendo.cdn.telerik.com/2022.1.119/styles/kendo.default-v2.min.css">

<style>
    /* Custom CSS for login form */
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
        display: block;
    }

    .k-textbox {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 3px;
    }

    .k-button {
        display: block;
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 3px;
        cursor: pointer;
    }

    .k-button:hover {
        background-color: #0056b3;
    }
</style>

<form id="loginForm" asp-controller="KendoUserComponent" asp-action="Login" method="post" class="container k-form">
    <div class="form-group">
        <label for="c_emailid">Email:</label>
        <input class="k-textbox" type="text" id="c_emailid" name="c_emailid" />
    </div>
    <div class="form-group">
        <label for="c_password">Password:</label>
        <input class="k-textbox" type="password" id="c_password" name="c_password" />
    </div>
    <button type="submit" class="k-button" id="submit">Login</button>
</form>

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<!-- Kendo UI Scripts -->
<script src="https://kendo.cdn.telerik.com/2022.1.119/js/kendo.all.min.js"></script>
<!-- Kendo UI Validator Script -->
<script>
    $(document).ready(function () {
        $("#submit").submit(function (e) {
            e.preventDefault(); // Prevent the form from submitting normally
            var formData = $(this).serialize(); // Serialize form data
            $.ajax({
                url: $(this).attr("action"), // Form action URL
                type: $(this).attr("method"), // Form method
                data: formData, // Form data
                success: function (result) {
                    // Handle successful login
                    console.log(result);
                    // Redirect to dashboard or display success message
                },
                error: function (xhr, status, error) {
                    // Handle login error
                    console.error(xhr.responseText);
                    // Display error message
                }
            });
        });
    });
</script>
